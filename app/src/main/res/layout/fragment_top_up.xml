<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.register.RegisterFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundColor"
        tools:context=".ui.main.profile.UserFragment"
        >

        <LinearLayout
            android:id="@+id/profileInfoGroup"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/background_card_white">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_card_white"
                    android:src="@drawable/ic_baseline_add_24"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Virtual Account Number"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkGrey"/>

                    <TextView
                        android:id="@+id/userNameInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2389 081393877946"
                        android:fontFamily="@font/nunito_font"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/topUpDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginHorizontal="35dp"
                android:fontFamily="@font/nunito"
                android:text="We provide you virtual account number for top up via nearest ATM."
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/howToTopUpText"
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="35dp"
                android:textStyle="bold"
                android:textColor="@color/darkGrey"
                android:fontFamily="@font/nunito"
                android:text="How to Top-Up"
                android:textSize="20sp"
                />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/profileMenuGroup"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            app:layout_constraintTop_toBottomOf="@id/profileInfoGroup"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/background_card_white"
                    android:src="@drawable/number_one"/>
                <TextView
                    android:id="@+id/topUpStep1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/background_login_card"
                    android:paddingHorizontal="20dp"
                    android:gravity="center_vertical"
                    android:fontFamily="@font/nunito_font"
                    android:text="Go to the nearest ATM or you can use E-Banking."
                    android:textSize="16sp"/>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_two"/>
            <TextView
                android:id="@+id/topUpStep2"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="Type your security number on the ATM or E-Banking."
                android:textSize="16sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_three"/>
            <TextView
                android:id="@+id/toUpStep3"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="Select “Transfer” in the menu"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_four"/>
            <TextView
                android:id="@+id/topUpStep4"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="Type the virtual account number that we provide you at the top."
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_five"/>
            <TextView
                android:id="@+id/topUpStep5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="Type the amount of the money you want to top up."
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_six"/>
            <TextView
                android:id="@+id/topUpStep6"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="Read the summary details"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_seven"/>
            <TextView
                android:id="@+id/topUpStep7"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="Press transfer / top up"
                android:textSize="18sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/background_card_white"
                android:src="@drawable/number_eight"/>
            <TextView
                android:id="@+id/topUpStep8"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@drawable/background_login_card"
                android:paddingHorizontal="20dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito"
                android:text="You can see your money in Zwallet within 3 hours."
                android:textSize="18sp"/>
        </LinearLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
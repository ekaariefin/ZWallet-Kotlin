<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/zBackgroundLightGrey">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_24"
                android:contentDescription="@string/arrow_back_icon_description" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Up"
                android:layout_marginStart="15dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_font_medium"
                android:textSize="16sp" />
        </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/profileInfoGroup"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="@drawable/background_card_white">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:background="#EBEEF2"
                    android:src="@drawable/ic_baseline_add_24"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Virtual Account Number"
                        android:textSize="12sp"
                        android:fontFamily="@font/nunito"
                        android:textColor="@color/darkGrey"/>

                    <TextView
                        android:id="@+id/userNameInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2389 081393877946"
                        android:fontFamily="@font/nunito_font"
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/topUpDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="36dp"
                android:fontFamily="@font/nunito"
                android:text="We provide you virtual account number for top up via nearest ATM."
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/profileMenuGroup"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_one"/>
                    <TextView
                        android:id="@+id/topUpStep1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"

                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito_font"
                        android:text="Go to the nearest ATM or you can use E-Banking."
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_two"/>
                    <TextView
                        android:id="@+id/topUpStep2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="Type your security number on the ATM or E-Banking."
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_three"/>
                    <TextView
                        android:id="@+id/toUpStep3"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="Select “Transfer” in the menu"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_four"/>
                    <TextView
                        android:id="@+id/topUpStep4"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="Type the virtual account number that we provide you at the top."
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_five"/>
                    <TextView
                        android:id="@+id/topUpStep5"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="Type the amount of the money you want to top up."
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_six"/>
                    <TextView
                        android:id="@+id/topUpStep6"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="Read the summary details"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_seven"/>
                    <TextView
                        android:id="@+id/topUpStep7"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="Press transfer / top up"
                        android:textSize="13sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:paddingHorizontal="20dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/number_eight"/>
                    <TextView
                        android:id="@+id/topUpStep8"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:paddingHorizontal="10dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/nunito"
                        android:text="You can see your money in Zwallet within 3 hours."
                        android:textSize="13sp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

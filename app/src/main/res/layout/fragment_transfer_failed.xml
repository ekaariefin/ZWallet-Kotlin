<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:background="@color/zBackgroundLightGrey"
    tools:context=".ui.layout.main.transfer.TransferSuccessFragment">

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/header_primary"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/navigation_back"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            tools:ignore="UseCompoundDrawables">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Transfer Details"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_font_medium"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/img_success"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/circle"
        android:src="@drawable/ic_baseline_close_white_24"
        app:layout_constraintTop_toBottomOf="@id/layoutHeader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/transfer_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/nunito_font"
        android:text="@string/transfer_failed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_success" />

    <TextView
        android:id="@+id/transferFailedDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/transfer_failed_desc"
        android:layout_marginHorizontal="26dp"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/nunito_font"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/transfer_success"
        app:layout_constraintStart_toStartOf="parent"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toBottomOf="@id/transferFailedDesc"
        app:layout_constraintBottom_toBottomOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingBottom="200dp"
            android:layout_marginHorizontal="15dp">

            <TextView
                android:id="@+id/detailTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:text="@string/details"
                android:fontFamily="@font/nunito_font"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/zTextColorLightGrey"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutAmountInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_card_white"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/detailTransfer">
                <TextView
                    android:id="@+id/confirmationAmountInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Amount"
                    android:textColor="@color/darkGrey"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/confirmationAmountValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.999.999.999"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBalanceLeftInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_card_white"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutAmountInfo">
                <TextView
                    android:id="@+id/confirmationBalanceLeftInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Balance Left"
                    android:textColor="@color/darkGrey"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/confirmationBalanceLeftValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp.999.999.999"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutDateAndInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_card_white"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutBalanceLeftInfo">
                <TextView
                    android:id="@+id/dateAndTimeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Date &amp; Time"
                    android:textColor="@color/darkGrey"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/dateAndTimeValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="March 15, 2022 - 14.30"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_card_white"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/layoutDateAndInfo">
                <TextView
                    android:id="@+id/notesInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Notes"
                    android:textColor="@color/darkGrey"
                    android:textSize="16sp" />
                <TextView
                    android:id="@+id/notesValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For buying Penthouse"
                    android:textColor="@color/black"
                    android:textSize="18sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/transfer_to_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/transfer_to"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nunito_font"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/zTextColorLightGrey"
                app:layout_constraintTop_toBottomOf="@id/layoutNotes"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/layoutTransferTo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_card_white"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="20dp"
                app:layout_constraintTop_toBottomOf="@id/transfer_to_text">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/selectedContactImage"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="15dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/avatar2"
                    app:shapeAppearanceOverlay="@style/RoundCornerOverlay" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/selectedContactName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/selectedContactPhoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="+62 812 345 678"
                        android:textColor="@color/darkGrey"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/zBackgroundLightGrey"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTryAgain"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/background_primary"
            android:fontFamily="@font/nunito"
            android:text="Try Again"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
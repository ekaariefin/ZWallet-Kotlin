<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.auth.register.RegisterFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".ui.main.profile.UserFragment"
    >

    <LinearLayout
        android:id="@+id/profileInfoGroup"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileImage"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="15dp"
            app:shapeAppearanceOverlay="@style/RoundCornerOverlay"
            android:scaleType="centerCrop"
            android:src="@drawable/avatar2"/>

        <TextView
            android:id="@+id/profileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito_font_bold"
            android:text="Eka Prasetyo Ariefin"
            android:gravity="center"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/profilePhoneNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nunito"
            android:text="+62 813-9387-7946"
            android:gravity="center"
            android:textSize="18sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/profileMenuGroup"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintTop_toBottomOf="@id/profileInfoGroup"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textButtonPersonalInfo"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_login_card"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
            android:fontFamily="@font/nunito_font_bold"
            android:text="Personal Information"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textButtonChangePassword"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_login_card"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
            android:fontFamily="@font/nunito_font_bold"
            android:text="Change Password"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textButtonChangePin"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_login_card"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
            android:fontFamily="@font/nunito_font_bold"
            android:text="Change PIN"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textButtonNotification"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_login_card"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
            android:fontFamily="@font/nunito_font_bold"
            android:text="Notification"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/textButtonLogout"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@drawable/background_login_card"
            android:paddingHorizontal="20dp"
            android:gravity="center_vertical"
            android:drawableRight="@drawable/toggle_on"
            android:fontFamily="@font/nunito_font_bold"
            android:text="Logout"
            android:textSize="20sp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
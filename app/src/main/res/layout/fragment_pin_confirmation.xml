<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintEnd_toStartOf="parent"
    android:background="#FAFCFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/navigation_back"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            tools:ignore="UseCompoundDrawables">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter Your PIN"
                android:textColor="@color/black"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/nunito_font_medium"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/input_pin_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/navigation_back"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="30dp"
            android:text="Enter your 6 digits PIN for confirmation to continue transferring money. "
            android:fontFamily="@font/nunito"
            android:textSize="14sp"/>

        <LinearLayout
            android:id="@+id/input_pin_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintEnd_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_pin_description"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="40dp">

            <EditText
                android:id="@+id/inputPin1"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:singleLine="true"
                android:nextFocusForward="@+id/inputPin2"
                android:background="@drawable/pin_input_background"/>
            <EditText
                android:id="@+id/inputPin2"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:singleLine="true"
                android:nextFocusForward="@+id/inputPin3"
                android:background="@drawable/pin_input_background"/>
            <EditText
                android:id="@+id/inputPin3"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:singleLine="true"
                android:nextFocusForward="@+id/inputPin4"
                android:background="@drawable/pin_input_background"/>
            <EditText
                android:id="@+id/inputPin4"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:nextFocusForward="@+id/inputPin5"
                android:background="@drawable/pin_input_background"/>
            <EditText
                android:id="@+id/inputPin5"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:imeOptions="actionNext"
                android:singleLine="true"
                android:nextFocusForward="@+id/inputPin6"
                android:background="@drawable/pin_input_background"/>
            <EditText
                android:id="@+id/inputPin6"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="4dp"
                android:inputType="number"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:maxLength="1"
                android:background="@drawable/pin_input_background"/>
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinueTransferProcess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:background="@drawable/background_primary"
        android:textAllCaps="false"
        android:text="Continue"
        android:textColor="@color/white"
        android:layout_marginHorizontal="20dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:fontFamily="@font/nunito"
        android:layout_marginVertical="30dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
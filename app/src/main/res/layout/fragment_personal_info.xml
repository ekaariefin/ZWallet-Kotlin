<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAFCFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:fontFamily="@font/nunito_font_medium"
            android:textSize="16sp" />
    </LinearLayout>


        <LinearLayout
            android:id="@+id/profileInfoGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/topUpDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/nunito"
                android:text="@string/personal_info_desc"
                android:textSize="14sp"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="20dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:orientation="vertical"
            android:background="@drawable/background_card_white">

            <TextView
                android:id="@+id/firstNameInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_card_white"
                android:text="First Name"
                android:textColor="#7A7886"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/firstNameValue"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/background_card_white"
                android:fontFamily="@font/nunito_font"
                android:text="Default First Name"
                android:textSize="16dp"
                android:textColor="#514F5B"
                android:textStyle="bold"/>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:background="@drawable/background_card_white">

                <TextView
                    android:id="@+id/lastNameInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:text="Last Name"
                    android:textColor="#7A7886"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/lastNameValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_card_white"
                    android:fontFamily="@font/nunito_font"
                    android:text="Default Last Name"
                    android:textSize="16dp"
                    android:textColor="#514F5B"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:background="@drawable/background_card_white">

                <TextView
                    android:id="@+id/verifiedEmailInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:text="Verified E-mail"
                    android:textColor="#7A7886"
                    android:textSize="12dp"/>

                <TextView
                    android:id="@+id/verifiedEmailValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/background_card_white"
                    android:fontFamily="@font/nunito_font"
                    android:text="Default Email Address"
                    android:textSize="16dp"
                    android:textColor="#514F5B"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="20dp"
                android:paddingVertical="10dp"
                android:orientation="vertical"
                android:background="@drawable/background_card_white">

                <TextView
                    android:id="@+id/phoneNumberInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_card_white"
                    android:text="Phone Number"
                    android:textColor="#7A7886"
                    android:textSize="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/phoneNumberValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:background="@drawable/background_card_white"
                        android:fontFamily="@font/nunito_font"
                        android:text="Default Phone Number"
                        android:textSize="16dp"
                        android:textColor="#514F5B"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/btnManagePhoneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Manage"
                        android:fontFamily="@font/nunito_font"
                        android:textColor="@color/primaryColor"
                        android:textStyle="bold"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>